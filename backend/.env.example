# Environment variables for Thinking OS
# Copy this file to .env and customize

# Application
APP_NAME=Thinking OS
APP_VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=sqlite:///./thinking_os.db

# Security (change this in production!)
API_SECRET_KEY=thinking-os-local-key-change-in-prod

# Recall system tuning
SIMILARITY_THRESHOLD=0.3
BLOCKER_REPEAT_THRESHOLD=3
REVISION_WINDOW_DAYS=7

# Gemini AI (required for AI-powered entry creation)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Future: LLM Integration (uncomment and configure when needed)
# EMBEDDING_MODEL=text-embedding-ada-002
# LLM_MODEL=gpt-4
# OPENAI_API_KEY=your-api-key
